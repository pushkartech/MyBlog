<%- include('partials/header'); -%>

    <h1>Home</h1>

    <p><%= startingcontent %> </p>

    <div class="">
        <% posts.forEach(post => { %> 
            <div class="card">
                <div class="card-body">
                  <h2 class="card-title"><%=  post.title %></h2>
                  <p class="card-text"> <%= post.body.substring(0, 100) + "..." %> 
                    <a href="/posts/<%= post.title %>" class="">Read More</a>
                    </p>
                  
                </div>
            </div>
        <% }); %>
    </div>

    <div class="compose" style="text-align: right;">
        <a href="/compose" class="btn btn-info">Compose new Blog</a>
    </div>
<%- include('partials/footer'); -%>
